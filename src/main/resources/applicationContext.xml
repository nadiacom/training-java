<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-4.1.xsd">

    <!-- ANNOTATIONS POUR L'INJECTION DE DEPENDANCES -->
    <context:annotation-config />

    <!-- ANNOTATIONS POUR LA CREATION DE BEANS -->
    <context:component-scan base-package="controllers" />

    <!-- ANNOTATIONS POUR AOP -->
    <!-- <aop:aspectj-autoproxy /> -->

    <!-- Data Source -->
    <bean name="propertyPlaceholder" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <value>classpath:hikari.properties</value>
        </property>
    </bean>
    <bean id="hikariConfig" class="com.zaxxer.hikari.HikariConfig">
        <property name="dataSourceProperties" >
            <props>
                <prop key="url">${dataSource.url}</prop>
                <prop key="user">${dataSource.user}</prop>
                <prop key="password">${dataSource.password}</prop>
            </props>
        </property>
        <property name="dataSourceClassName" value="${dataSourceClassName}" />
        <property name="maximumPoolSize" value="${maximumPoolSize}" />
    </bean>
    <bean id="dataSource" class="com.zaxxer.hikari.HikariDataSource">
        <constructor-arg ref="hikariConfig" />
    </bean>
    <bean class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
        <property name="staticMethod" value="persistence.DAOFactory.setDs"/>
        <property name="arguments">
            <list>
                <ref bean="dataSource"/>
            </list>
        </property>
    </bean>


    <!-- DAO Factory -->
    <bean id="daoFactory" class="persistence.DAOFactory" scope="singleton">
    </bean>

    <!-- DAOS -->
    <bean id="companyDao" class="persistence.daos.CompanyDaoImpl" scope="singleton">
        <property name="daoFactory" ref="daoFactory"/>
    </bean>

    <bean id="computerDao" class="persistence.daos.ComputerDaoImpl" scope="singleton">
        <property name="daoFactory" ref="daoFactory"/>
    </bean>

    <!-- SERVICES -->
    <bean id="companyService" class="services.CompanyService" scope="singleton">
        <property name="companyDao" ref="companyDao"/>
        <property name="computerDao" ref="computerDao"/>
        <property name="daoFactory" ref="daoFactory"/>
    </bean>

    <bean id="computerService" class="services.ComputerService" scope="singleton">
        <property name="companyDao" ref="companyDao"/>
        <property name="computerDao" ref="computerDao"/>
        <property name="daoFactory" ref="daoFactory"/>
    </bean>

    <!-- MAPPERS -->
    <bean id="companyMapper" class="mappers.CompanyMapper" scope="singleton">
    </bean>

    <bean id="computerMapper" class="mappers.ComputerMapper" scope="singleton">
        <property name="companyMapper" ref="companyMapper"/>
    </bean>

    <!-- DTO SERVICES -->
    <bean id="companyDTOService" class="services.dtos.CompanyDTOServiceImpl" scope="singleton">
        <property name="companyService" ref="companyService"/>
        <property name="companyMapper" ref="companyMapper"/>
    </bean>

    <bean id="computerDTOService" class="services.dtos.ComputerDTOServiceImpl" scope="singleton">
        <property name="computerService" ref="computerService"/>
        <property name="computerMapper" ref="computerMapper"/>
    </bean>

    <!-- UTILS -->
    <bean id="computerUtils" class="utils.ComputerUtils" scope="singleton">
        <property name="computerDTOService" ref="computerDTOService"/>
    </bean>

    <!-- VALIDATORS -->
    <bean id="computerValidator" class="services.validators.urls.ComputerEditUrlValidator" scope="singleton">
        <property name="computerDao" ref="computerDao"/>
    </bean>

    <!-- SERVLETS -->
    <bean name="dashboard" class="controllers.webservices.Dashboard" scope="prototype" >
        <property name="computerService" ref="computerService"/>
    </bean>
    <bean name="edit" class="controllers.webservices.ComputerEdit" scope="prototype" >
        <property name="computerService" ref="computerService"/>
        <property name="companyDTOService" ref="companyDTOService"/>
        <property name="computerDTOService" ref="computerDTOService"/>
    </bean>
    <bean name="add" class="controllers.webservices.ComputerAdd" scope="prototype" >
        <property name="computerService" ref="computerService"/>
        <property name="companyService" ref="companyService"/>
    </bean>

</beans>